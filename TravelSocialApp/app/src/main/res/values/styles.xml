<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme2" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/red</item>
    </style>



    <!--    底部标签栏样式-->
    <style name="TabButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/tab_bg_gray</item>
        <item name="android:textSize">@dimen/note_textsize</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

<!--    登录界面欢迎字体,大号加粗-->
    <style name="WelcomeText">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">5dp</item>
    </style>

    <!--    大标题字体，黑色-->
    <style name="TitleText">
        <item name="android:textSize">@dimen/title_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>
<!--    导航栏字体，黑色-->
    <style name="TopTabText">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!--    导航栏字体，白色-->
    <style name="TopTabTextWhite">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>


<!--    输入框字体,清晰-->
    <style name="EditInputText">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textStyle">bold</item>
    </style>

<!--   绿色按钮,-->
    <style name="GreenButtonText">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
    <!--   绿色按钮2-->
    <style name="GreenButtonText2">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:background">@drawable/round_button3</item>
    </style>

    <!--   黑色按钮,-->
    <style name="BlackButtonText">
        <item name="android:textSize">@dimen/middle_textsize</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/round_button2</item>
    </style>

</resources>
